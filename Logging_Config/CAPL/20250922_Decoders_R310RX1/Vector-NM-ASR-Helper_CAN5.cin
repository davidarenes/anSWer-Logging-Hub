void NMCAN5_IndStateChangeNotification( long previousState, long currentState) 
{
  long mode;
  if ((previousState == cCAN5_ASR_NM_STATE_UNDEFINED || previousState == cCAN5_ASR_NM_STATE_BUS_SLEEP) && (currentState != cCAN5_ASR_NM_STATE_BUS_SLEEP))
  { 
    @sysvar::NM_CAN5::StateControl::ActiveNodes += 1;
  }
  if ((previousState != cCAN5_ASR_NM_STATE_UNDEFINED) && (currentState == cCAN5_ASR_NM_STATE_BUS_SLEEP))
  { 
    @sysvar::NM_CAN5::StateControl::ActiveNodes -= 1;
  }

  gNMCAN5_CurrentNMState = currentState;

  if ((currentState <= cCAN5_ASR_NM_STATE_BUS_SLEEP) || (currentState > cCAN5_ASR_NM_STATE_SYNCHRONIZE))
  {
    mode = cCAN5_NM_NODE_MODE_Sleep_Mode;
  }
  else
  {
    if (currentState == cCAN5_ASR_NM_STATE_SYNCHRONIZE)
    {
      mode = cCAN5_NM_NODE_MODE_Synchronize_Mode;
    }
    else
    {
      mode = cCAN5_NM_NODE_MODE_Network_Mode;
    }
  }

  if (gNMPCAN5_DebugFlags & cNMCAN5_NMIndDebug)
  {
    write("[%.6f %NODE_NAME%]: NM currentState = %d, mode = %d", TimeNowNS()/cNMCAN5_NS2S, currentState, mode);
  }
}

