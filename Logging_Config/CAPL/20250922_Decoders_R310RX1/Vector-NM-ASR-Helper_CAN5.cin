variables
{
  /* NM-IL Include for CAN Vector IL with AUTOSAR NM
   *
   * This include file establishes the coupling between NM --> IL.
   *
   * The simulation node needs to load the components CANoeILNLVector.dll and AsrNM33.dll.
   *
   * Call NMCAN5_OnInit() in "on preStart()" of the main program!
   * Call NMCAN5_OnStart() in "on start()" of the main program!
   *
   * Version 6.5, (c) 2016 Vector Informatik GmbH, Department for Networks and Distributed Systems
   */

  const dword cNMCAN5_NMIndDebug      = 0x0001;
  const dword cNMCAN5_NMInitDebug     = 0x0002;
  const dword cNMCAN5_ILControlDebug  = 0x0010;
  
  const double cNMCAN5_NS2S = 1000000000.0;

  // Internally used variables and timers:
  dword   gNMCAN5_BusContext = 0;
  long    gNMCAN5_CurrentNMState = cCAN5_ASR_NM_STATE_UNDEFINED;
  long    gNMCAN5_CurrentNMInternalRequest = 0;
  
}

/*****************************************************************************
 * Include Initialization
 *****************************************************************************/

void NMCAN5_OnInit ()
{
  // This function must be called from the main program in "on preStart()"!

  //Nm_SetVerbosity(3);
  
  
  gNMCAN5_BusContext = GetBusNameContext(gCAN5BusName);

  if (strncmp("%NODE_NAME%", "_Gateway", 50) == 0)
  {
    gNMPCAN5_DebugFlags |= cNMCAN5_NMIndDebug;
    gNMPCAN5_DebugFlags |= cNMCAN5_NMInitDebug;
    gNMPCAN5_DebugFlags |= cNMPCAN5_NMControlDebug;
    gNMPCAN5_DebugFlags |= cNMCAN5_ILControlDebug;
  }

  SetBusContext(gNMCAN5_BusContext);
  Nm_ConfigureILNotifications( 0, 1 ); // regardless of NM callbacks inform IL
}

void NMCAN5_OnStart ()
{
  // This function must be called from the main program in "on start()"!
  
  if (gNMPCAN5_DebugFlags & cNMCAN5_NMInitDebug)
  {
    write("+++++++++ %NODE_NAME%: CAN NM on start()");
  }
}

/*****************************************************************************
 * NM Control
 * These functions can be called from the main program or react on
 * panel controls in order to manipulate the NM status of the controlled node.
 *****************************************************************************/

void NMCAN5_Enable (int enable)
{
  /* void NMCAN5_Enable (int enable);
   *
   *  Function enables/disables the Network Management DLL.
   */
  int wasEnabled = -1;

  //if (enable == wasEnabled) return;

  if (gNMPCAN5_DebugFlags & cNMPCAN5_NMControlDebug)
  {
    write("[%.6f %NODE_NAME%] NMCAN5_Enable(%d) called ...", TimeNowNS()/cNMCAN5_NS2S, enable);
  }

  SetBusContext(gNMCAN5_BusContext);
  if (enable == 1)
  {
    Nm_CtrlSimulationOn();
  }
  else
  {
    Nm_CtrlSimulationOff();
  }

  wasEnabled = enable;
}

void NMCAN5_SetApplActivity (int activity)
{
  /* void NMCAN5_SetApplActivity (int activity);
   *
   *  Function sets the application activity at the Interaction Layer.
   */
  int wasActivity = -1;

  //if (activity == wasActivity) return;

  if (gNMPCAN5_DebugFlags & cNMPCAN5_NMControlDebug)
  {
    write("[%.6f %NODE_NAME%] NMCAN5_SetApplActivity(%d) called ...", TimeNowNS()/cNMCAN5_NS2S, activity);
  }

  SetBusContext(gNMCAN5_BusContext);
  if (activity > 0)
  {
    Nm_SetApplicationActivity(1);
  }
  else
  {
    Nm_SetApplicationActivity(0);
  }

  wasActivity = activity;
}

