void NMCAN4_IndStateChangeNotification( long previousState, long currentState) 
{
  long mode;
  if ((previousState == cCAN4_ASR_NM_STATE_UNDEFINED || previousState == cCAN4_ASR_NM_STATE_BUS_SLEEP) && (currentState != cCAN4_ASR_NM_STATE_BUS_SLEEP))
  { 
    @sysvar::NM_CAN4::StateControl::ActiveNodes += 1;
  }
  if ((previousState != cCAN4_ASR_NM_STATE_UNDEFINED) && (currentState == cCAN4_ASR_NM_STATE_BUS_SLEEP))
  { 
    @sysvar::NM_CAN4::StateControl::ActiveNodes -= 1;
  }

  gNMCAN4_CurrentNMState = currentState;

  if ((currentState <= cCAN4_ASR_NM_STATE_BUS_SLEEP) || (currentState > cCAN4_ASR_NM_STATE_SYNCHRONIZE))
  {
    mode = cCAN4_NM_NODE_MODE_Sleep_Mode;
  }
  else
  {
    if (currentState == cCAN4_ASR_NM_STATE_SYNCHRONIZE)
    {
      mode = cCAN4_NM_NODE_MODE_Synchronize_Mode;
    }
    else
    {
      mode = cCAN4_NM_NODE_MODE_Network_Mode;
    }
  }

  if (gNMPCAN4_DebugFlags & cNMCAN4_NMIndDebug)
  {
    write("[%.6f %NODE_NAME%]: NM currentState = %d, mode = %d", TimeNowNS()/cNMCAN4_NS2S, currentState, mode);
  }
}

